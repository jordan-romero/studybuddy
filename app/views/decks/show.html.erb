<h1 class="display-4 text-capitalize text-center bg-info text-white pt-3 border border-primary"><%= @deck.name %> </h1>


<% @deck.flashcards.each do |f|%>
<li class= "list-unstyled text-capitalize text-center pb-1" > <%= link_to f.name, flashcard_path(f), class: 'text-info' %></li>
<% end %>

<div class="text-weight-bold text-center text-primary font-weight-bold pt-3"> <%= link_to "Update Deck", edit_deck_path(@deck), class: "btn btn-outline-info" %></div><br>
<div class="row justify-content-center"><%= button_to 'Delete Deck', @deck, method: :delete, class: "btn btn-outline-danger"%></div> 



