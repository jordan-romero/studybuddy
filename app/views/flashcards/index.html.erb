<h1 class="pt-3 display-4 text-center bg-info text-light">All Flashcards:</h1>

<h3 class="pt-4 text-center bg-light text-info"> Search Flashcards </h3>
<%= form_tag(flashcards_path, method: :get) do %>
    <div class="text-center pb-3"><%= text_field_tag(:search, params[:search])%></div>
    <div class="row justify-content-center"><%= submit_tag ("Search"), class: 'btn btn-outline-info'%></div>
<% end %>

  

<ul><% @flashcards.each do |f| %> </ul>
<li class= "list-unstyled text-capitalize text-center pb-1" > <%=link_to f.name, flashcard_path(f), class: 'text-info' %></li>

<% end %> 



